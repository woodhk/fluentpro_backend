[run]
source = .
omit = 
    # Virtual environments
    venv/*
    env/*
    .venv/*
    
    # Test files
    tests/*
    **/test_*.py
    **/*_test.py
    **/tests.py
    
    # Migration files
    **/migrations/*
    
    # Configuration and setup files
    manage.py
    setup.py
    wsgi.py
    asgi.py
    **/settings/*
    
    # Init files (often just imports)
    **/__init__.py
    
    # Scripts and utilities
    scripts/*
    
    # Third-party and vendor code
    **/vendor/*
    **/third_party/*
    
    # Documentation
    docs/*
    
    # Build and deployment
    build/*
    dist/*
    *.egg-info/*
    
    # Docker and deployment files
    Dockerfile*
    docker-compose*

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod
    
    # Don't complain about typing imports
    if TYPE_CHECKING:
    
    # Don't complain about protocol definitions
    \.\.\.

# Show missing lines in report
show_missing = true

# Minimum coverage percentage
fail_under = 80

# Precision for coverage percentage
precision = 2

[html]
directory = htmlcov
title = FluentPro Backend Coverage Report

[xml]
output = coverage.xml